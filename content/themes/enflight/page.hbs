{{!< default}}

{{#post}}

<main class="content" role="main">
	<div class="inner">

	    <article class="{{post_class}}">
			
<header id="header" class="header{{#if @blog.cover}} has-cover{{/if}}">
	<div class="inner">
		<a class="header-title" href="{{@blog.url}}">
			<h1 class="header-name">{{@blog.title}}</h1>
			{{#if @blog.description}}
				<span class="header-description" href="/contact">{{!-- {{@blog.description}} --}}Elegant productions in photography, cinema, and design.


				<div class="wrapper">
  					<a href="/contact" class="button">Share your story with us</a>
				</div>

					<div class="wrapper-view">
						<div class="button-view" id='featured'>View&nbsp;</div>
					</div>
				</span>

			{{/if}}
		</a>
	</div>
	{{#if @blog.cover}}
	<div id="header-cover" class="header-cover"></div>
	{{/if}}
</header>
		
			<section class="post-content">	
				{{content}}
			</section>
	
	        {{/post}}
	
	    </article>
    </div>

</main>

<script>
	window.fetchAndRandomize && window.fetchAndRandomize()
</script>
